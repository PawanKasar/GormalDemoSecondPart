<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:layout_margin="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay1"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:id="@+id/viewForeground"
        android:weightSum="2"
        android:padding="@dimen/_5sdp">


        <ImageView
            android:id="@+id/iv_MycourseImage"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E9EFF7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_MycourseTitle"
                android:layout_marginTop="1dp"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Title"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">


                <TextView
                    android:id="@+id/tv_MycourseCreatorName"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Creator"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_MycourseSlash"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:layout_gravity="bottom"/>

                <TextView
                    android:id="@+id/tv_MycourseCategory"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_MycourseLanguage"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_MycourseSlash_2"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:layout_gravity="bottom"/>

                <TextView
                    android:id="@+id/tv_MycourseDuration"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/tv_MycourseStartLearning"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Learning"
                        android:textSize="10sp"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/curve_corner_purple" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>